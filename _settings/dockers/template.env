# Platform Configuration for {PLATFORM_NAME}
PLATFORM_NAME={PLATFORM_NAME}
PLATFORM_DESCRIPTION="{PLATFORM_DESCRIPTION}"
GITHUB_USER={GITHUB_USER}
PLATFORM_SN={PLATFORM_SN}
BASE_PLATFORM_PORT={BASE_PLATFORM_PORT}

# Security
JWT_SECRET_SALT={JWT_SECRET_SALT}
ENCRYPTION_KEY={ENCRYPTION_KEY}

# Database Configuration
## MySQL
MYSQL_ROOT_PASSWORD={MYSQL_ROOT_PASSWORD}
MYSQL_HOST=mysql-server
MYSQL_PORT=3306

## PostgreSQL
POSTGRES_PASSWORD={POSTGRES_PASSWORD}
POSTGRES_HOST=postgres-server
POSTGRES_PORT=5432

# Network Configuration
DOCKER_NETWORK={PLATFORM_NAME}_network
DOCKER_SUBNET=172.20.0.0/16
DOCKER_GATEWAY=172.20.0.1

# Volumes
DATA_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/data
LOGS_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/logs
BACKUPS_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/backups