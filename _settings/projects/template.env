# Project Configuration for {PLATFORM_NAME}_{PROJECT_NAME}
PROJECT_NAME={PROJECT_NAME}
PLATFORM_NAME={PLATFORM_NAME}
PROJECT_DESCRIPTION={PROJECT_DESCRIPTION}
GITHUB_USER={GITHUB_USER}

# Service Ports
BACKEND_PORT={BACKEND_PORT}
GRAPHQL_PORT={GRAPHQL_PORT}
FRONTEND_NEXTJS_PORT={FRONTEND_NEXTJS_PORT}
FRONTEND_SVELTEKIT_PORT={FRONTEND_SVELTEKIT_PORT}

# Database Configuration
DB_TYPE=mysql
DB_HOST=mysql-server
DB_PORT=3306
DB_NAME={PROJECT_DATABASE_NAME}
DB_USER={PROJECT_DATABASE_USER}
DB_PASSWORD={PROJECT_DATABASE_PASSWORD}

# Alternative PostgreSQL Configuration
# DB_TYPE=postgresql
# DB_HOST=postgres-server
# DB_PORT=5432
# DB_NAME={PROJECT_DATABASE_NAME}
# DB_USER={PROJECT_DATABASE_USER}
# DB_PASSWORD={PROJECT_DATABASE_PASSWORD}

# Application Environment
NODE_ENV=development
PORT={BACKEND_PORT}
GRAPHQL_PORT={GRAPHQL_PORT}

# CORS Configuration
CORS_ORIGIN=http://localhost:{FRONTEND_NEXTJS_PORT}

# Authentication
JWT_SECRET={PROJECT_JWT_SECRET}
JWT_EXPIRES_IN=7d

# GraphQL Configuration
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:{GRAPHQL_PORT}/graphql
NEXT_PUBLIC_BACKEND_URL=http://localhost:{BACKEND_PORT}

# Docker Configuration
DOCKER_IMAGE_BACKEND={PLATFORM_NAME}/{PROJECT_NAME}-backend
DOCKER_IMAGE_FRONTEND_NEXTJS={PLATFORM_NAME}/{PROJECT_NAME}-frontend-nextjs
DOCKER_IMAGE_FRONTEND_SVELTEKIT={PLATFORM_NAME}/{PROJECT_NAME}-frontend-sveltekit

# Volumes
PROJECT_DATA_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/projects/{PROJECT_NAME}/data
PROJECT_LOGS_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/projects/{PROJECT_NAME}/logs
PROJECT_UPLOADS_PATH=/var/services/homes/jungsam/dockers/{PLATFORM_NAME}/projects/{PROJECT_NAME}/uploads

# Network
DOCKER_NETWORK={PLATFORM_NAME}_network